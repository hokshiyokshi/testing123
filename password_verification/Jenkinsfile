pipeline {
    agent any
    environment {
        dockerImage = ''
        dockerContainer = ''
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/motorfireman/Test.git'
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = bat(script: 'docker build -t password_verification password_verification/', returnStdout: true).trim()
                }
            }
        }
        stage('Run Docker Container') {
            steps {
                script {
                    dockerContainer = bat(script: 'docker run -d -p 5000:5000 password_verification', returnStdout: true).trim()
                }
            }
        }
        stage('Dependency Check') {
            steps {
                echo 'Running dependency check...'
            }
        }
        stage('UI Testing') {
            steps {
                echo 'Running UI tests...'
            }
        }
    }
    post {
        always {
            script {
                if (dockerContainer) {
                    bat "docker stop ${dockerContainer}"
                }
            }
        }
    }
}
